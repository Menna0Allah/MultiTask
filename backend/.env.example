# Django Settings
SECRET_KEY='your-secret-key-here'
DEBUG=True

# Database Configuration (PostgreSQL)
DATABASE_NAME=multitask_db
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Redis Settings (for WebSocket and Caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# Google Gemini API (FREE - Get your key at https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# Recommendation Settings (Optional - uses defaults if not set)
RECOMMENDATION_MODEL=sentence-transformers/all-MiniLM-L6-v2
MAX_RECOMMENDATIONS=10

# Google OAuth (Get credentials at https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Frontend URL
FRONTEND_URL=http://localhost:5173

